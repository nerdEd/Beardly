!!!
%html
  %head
    %title Beard!
    = stylesheet_link_tag 'beardly'
    = yield(:head)
  %body
    #header
      = link_to image_tag('MuttonStache-Small.png'), root_path, {:class => 'logo'}
      .controls
        - if logged_in?
          = link_to "Logout", logout_path
        - else
          = link_to "Login", login_path
    #content
      = yield
